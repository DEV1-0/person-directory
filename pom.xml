        <url>http://developer.ja-sig.org/source/viewrep/jasig/PersonDirectory/</url>
        <developerConnection>scm:cvs:pserver:${maven.username}@developer.ja-sig.org:/home/cvs/jasig:PersonDirectory</developerConnection>
        <connection>scm:cvs:pserver:anonymous@developer.ja-sig.org:/home/cvs/jasig:PersonDirectory</connection>
        <tag>1.0.0-RC3</tag>
    </scm>
